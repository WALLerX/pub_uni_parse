{
  "name": "web_app",
  "version": "1.0.0",
  "description": "Web app micro-service",
  "author": "WALLer <waller@bk.ru>",
  "main": "./build/main.js",
  "scripts": {
    "start": "NODE_PATH=./build node build/main.js",
    "build": "webpack ./src/app.tsx --config webpack-config.js && ./node_modules/.bin/tsc -p . ",
    "dev": "npm-run-all --parallel watch:server watch:build",
    "watch:build": "webpack --watch --config webpack-config.js",
    "watch:server": " nodemon src/main.ts"
  },
  "devDependencies": {
    "ts-node": "10.9.1",
    "ts-loader": "9.4.1",
    "css-loader": "6.7.1",
    "style-loader": "3.3.1",    
    "typescript": "4.8.4",
    "@types/express": "4.17.14",
    "@types/node": "18.11.0",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "@types/bootstrap": "5.2.5",
    "nodemon": "2.0.20",
    "mongoose": "6.7.0",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0",
    "npm-run-all": "4.1.5",
    "sass": "1.55.0",
    "sass-loader": "13.1.0",
    "postcss-loader":"7.0.1"
  },
  "dependencies": {
    "express": "4.18.2",
    "react": "18.2.0",
